{
  "compilerOptions": {
    "target": "ESNext",
    "module": "ESNext",
    "moduleResolution": "Node",
    "strict": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,
    "jsx": "react",
    "allowJs": true,
    "declaration": true,
    "outDir": "./dist",
    "baseUrl": ".",
    "paths": {
      "@repo/crud/ui/auto/*": ["../../../crud/ui/auto/*"]
    }
  },
  "include": ["index.ts", "**/*.ts", "**/*.tsx"]
}
